{
	"manifest_version": 3,
	"name": "Geo Reminder",
	"version": "1.0",
	"description": "Chrome extension that triggers reminders based on the user's location",
	"permissions": ["activeTab", "tabs", "alarms", "storage", "notifications"],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/icon16.png",
			"48": "images/icon48.png",
			"128": "images/icon128.png"
		}
	},
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	}
}
